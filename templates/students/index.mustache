<html>  
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<title>Students List</title>
</head>  
<body style="background-color:black;">
    <div class="container">
      <div class="row">
    <div class="header">
        <h1 style="color:white;"><center>Students List </center></h1>
    </div>
    <div class="col-0">
        <a type="button" href="../frontpage.html" class="btn btn-btn btn-outline-warning btn-lg ms-2">Back</a>
        <a type="button" href="../students/add.php" class="btn btn-btn btn-outline-primary btn-lg ms-2" style="float: right;">Add Student</a>
    </div> 
      </div>
    </div>
    <div class="table-responsive">
    <table class="table table-bordered table table-black">
      <thead>
        <tr style="color:white";>
    <th scope="col">ID</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Email</th>
    <th scope="col">Contact Number</th>
    <th scope="col">Program</th>
    <th scope="col">Action</th>
        </tr>
      </thead>
      {{# all_students }}
       <tbody>
        <tr style="color:white";>
    <th scope="row">{{id}}</th>
    <td>{{ first_name }}</td>
    <td>{{ last_name }}</td>
    <td>{{ email }}</td>
    <td>{{ contact_number }}</td>
    <td>{{ program }}</td>
    <td width="20%">
        <a href="../students/edit.php?id={{id}}" class="btn btn-outline-success" style="width: 100px">Update</a>
        <a href="../students/delete.php?id={{id}}" class="btn btn-outline-danger"  style="width: 100px">Remove</a>
    </td>
        </tr>
      </tbody>
      {{/ all_students }}

    </table>
    </div>
 </div>

